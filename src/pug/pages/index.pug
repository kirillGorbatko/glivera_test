extends ../layout/_layout

block vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'Index'}
block content_block
	section.section.demo_mod
		.section__container
			.section__body.body_section
				h1.body_section__title Recent posts
				ul.body_section__posts
						+post('01', 'The Internet Cannot be Trusted – Beamsplitters, Backdoors, and Broken Promises', 'Derek Zimmer','JUL 25, 2018', ['Governments', 'Networking', 'Open Source', 'Privacy', 'Security'], 0)
						+post('02', 'How to get cheaper flights using a VPN', 'Jayson','JUL 24, 2018', ['Guides'], 0)
						+post('03', 'Net Neutrality was repealed, but the fight is far from over', 'Chris Miller','JUL 22, 2018', ['Governments', 'Net Neutrality', 'News'], 0)
