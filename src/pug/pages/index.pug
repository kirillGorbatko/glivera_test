						+post('02', 'How to get cheaper flights using a VPN', 'Jayson','JUL 24, 2018', ['Guides'], 0)
						+post('03', 'Net Neutrality was repealed, but the fight is far from over', 'Chris Miller','JUL 22, 2018', ['Governments', 'Net Neutrality', 'News'], 0)
				.body_section__footer
							a.body_section__button.btn_base(href="#") older posts
			aside.section__aside.aside_section
				form(action="#" method="get").aside_section__search.search_aside
					.search_aside__wrap
						input(name="form[]", type="text", autocomplete="off", placeholder="Search blog").search_aside__input.form_input__element
						button(type="submit").search_aside__button
				.aside_section__links.links_aside
					each item in links
						.links_aside__in
							h2(class=`links_aside__title links_aside__title${item.iconClass}`)= item.title
							ul.links_aside__list
								each link in item.list
									li.links_aside__item 
										a.links_aside__link(href="#")= link
				a.aside_section__poster(href="#")
					img(src="images/poster.jpg", alt="poster")
				.aside_section__wrap
					h2.aside_section__title Tag cloud
					.aside_section__tags
						each tag in tags
							a(class=`aside_section__tag aside_section__tag${tag.size}`, href="#")= tag.tag
		.section__adapt
			a.aside_section__poster(href="#")
				img(src="images/poster.jpg", alt="poster")
			.aside_section__wrap
				h2.aside_section__title Tag cloud
